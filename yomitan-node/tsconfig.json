{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "outDir": "dist",
        "rootDir": "..",
        "baseUrl": "..",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "noEmit": true
    },
    "include": ["."],
    "exclude": ["node_modules", "dist"]
}
